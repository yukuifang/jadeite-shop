.line_top
{
  width: 100%;
  height: 1px;
  background:#eeeff3;
}
.section
{
  padding-top: 10px;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 15px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.line
{
  margin: 0 15PX;
  background: #eeeff3;
  height: 1px;
}
.left 
{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.left image
{
  width: 50px;
  height: 50px;
  margin-right: 15px;
}
.dot
{
  position: absolute;
  top: 3px;
  left: 35px;
  font-size: 11px;
  border-radius: 8px;
  width: 16px;
  height: 16px;
  background: red;
  color: #ffffff;
  text-align: center;
}
.content
{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 13px;
  color: #7b7b7b;
}
.title
{
  font-size: 16px;
  color: #000000;
}
.time
{
  font-size: 10px;
  color: #919191;
}